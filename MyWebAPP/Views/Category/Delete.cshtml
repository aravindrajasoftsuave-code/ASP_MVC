@model Category

<form method="post">
    <input type="hidden" asp-for="Category_ID" />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-danger">Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label>Category Name</label>
            <input asp-for="Category_Name" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label>Display Order</label>
            <input asp-for="Display_Order" class="form-control" disabled />
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">
                    Delete
                </button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Category"
                   asp-action="Index"
                   class="btn btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
